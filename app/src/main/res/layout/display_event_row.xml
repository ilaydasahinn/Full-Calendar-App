<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/display_row">

    <TextView
        android:id="@+id/row_event_name"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:text="Event1"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/row_event_starttime"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/row_event_name"
        android:layout_toRightOf="@+id/row_event_name"
        android:gravity="center"
        android:text="14 May 2020 20:00" />

    <TextView
        android:id="@+id/row_event_finishtime"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="14 May 2020 22:00" />

    <ImageButton
        android:id="@+id/row_edit"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="48dp"
        android:background="@null"
        app:srcCompat="@drawable/edit" />

    <ImageButton
        android:id="@+id/row_delete"
        android:layout_width="41dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="9dp"
        android:background="@null"
        app:srcCompat="@drawable/delete" />

    <ImageButton
        android:id="@+id/row_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="96dp"
        android:background="@null"
        app:srcCompat="@drawable/share" />


</RelativeLayout>